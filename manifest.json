{
  "name": "PubPeer",
  "description": "Show links to existing PubPeer comments",
  "version": "0.3.0",
  "manifest_version": 2,
  "update_url": "https://clients2.google.com/service/update2/crx",
  "content_scripts": [ 
    {
      "js": [ "jquery-2.1.0.min.js", "PP.js" ],
      "matches": ["*://*/*"],
      "run_at": "document_end"
    } 
  ],
  "permissions": [
    "https://api.pubpeer.com/",
    "https://pubpeer.dev/"
  ],
  "icons": {
    "128": "pubpeer-128x128.png",
    "16": "pubpeer-16x16.png",
    "48": "pubpeer-48x48.png"
  }
}
